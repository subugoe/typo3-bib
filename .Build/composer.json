{
  "name": "ipf/bib",
  "type": "typo3-cms-extension",
  "description": "A customizable bibliography and publication reference manager with a convenient frontend editor and import/export functionality.",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Ingo Pfennigstorf",
      "email": "i.pfennigstorf@gmail.com"
    }
  ],
  "require": {
    "typo3/cms": "^8.7.0",
    "typo3fluid/fluid": "^2.5.4"
  },
  "require-dev": {
    "php": "~7.0 || ~7.1",
    "fortawesome/font-awesome": "~4.4",
    "typo3/testing-framework": "^1.1.0",
    "phpunit/phpcov": "^4.0.0",
    "codeclimate/php-test-reporter": "^0.4.4"
  },
  "replace": {
    "bib": "self.version",
    "typo3-ter/bib": "self.version"
  },
  "config": {
      "vendor-dir": "vendor",
      "bin-dir": "bin",
      "preferred-install": {
          "*": "dist"
      }
  },
  "autoload": {
    "psr-4": {
      "Ipf\\Bib\\": "web/typo3conf/ext/bib/Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ipf\\Bib\\Tests\\": "web/typo3conf/ext/bib/Tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p web/typo3conf/ext/",
      "[ -L web/typo3conf/ext/bib ] || ln -snvf ../../../../. web/typo3conf/ext/bib"
    ]
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "web"
    }
  }
}
